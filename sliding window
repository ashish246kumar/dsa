******************************************
max-consecutive-ones-iii
**********

class Solution:
    def longestOnes(self, nums: List[int], k: int) -> int:
        n=len(nums)
        left=0
        right=0
        zero=0
        maxlen=0
        while(right<n):
            if nums[right]==0:
                zero+=1
            while(zero>k):
                if nums[left]==0:
                    zero-=1
                left+=1    

            maxlen=max(maxlen,right-left+1)  
            right+=1  
          
        return maxlen          
